<MainLayout>
    BoxLayout:
        orientation: 'vertical'
        size: self.parent.size
        spacing: '10dp'
        padding: '10dp'
        GridLayout:
            cols:1
            GridLayout:
                cols:2
                size_hint:(1,0.1)
                GridLayout:
                    cols:1
                    Image:
                        source: 'black.jpg'
                        allow_stretch: True
                        keep_ratio: False
                    ToggleButton:
                        id:"left_toggle"
                        text:"ðŸ§‚ Add Salt"
                        size_hint:(1,0.2)
                        font_name:"seguiemj"
                        font_size: '20sp'
                        background_normal: ''
                        background_color: [1,129/255.0,63/255.0,1]
                        on_press: root.left_toggle(self)
                GridLayout:
                    cols:1
                    Image:
                        source: 'black.jpg'
                        allow_stretch: True
                        keep_ratio: False
                    ToggleButton:
                        id:"right_toggle"
                        size_hint:(1,0.2)
                        text:"ðŸ§‚ Add Salt"
                        font_name:"seguiemj"
                        font_size: '20sp'
                        background_normal: ''
                        background_color: [1,129/255.0,63/255.0,1]
                        on_press: root.right_toggle(self)
        Button:
            text:"â–¶ Start"
            font_name:"seguiemj"
            font_size: '40dp'
            size_hint:(1,0.4)
            background_normal: ''
            background_color: [91/255.0,192/255.0,222/255.0,1]
            on_press: root.start(self)
    FloatLayout:
        size: self.parent.size
        Label:
            id:"left"
            pos_hint: {'center_x': .23, 'center_y': .7}
            size_hint: (0,0)
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'dust.png'
        Label:
            id:"right"
            pos_hint: {'center_x': .73, 'center_y': .7}
            size_hint: (0,0)
            canvas.after:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'dust.png'
        Label:
            id:"roomba"
            pos_hint: {'center_x': 0.25, 'center_y': .7}
            size_hint: (0.2, 0.2)
            canvas.after:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'roomba.png'

                    
        